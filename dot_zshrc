	aptin='sudo apt-get install' \
	aptrm='sudo apt-get remove' \
	aptref='sudo apt-get update' \
	aptup='sudo apt-get upgrade' \
#Pacman
alias \
	pacin='sudo pacman -S' \
	pacrm='sudo pacman -Rs' \
	pacref='sudo pacman -Syy' \
	pacup='sudo pacman -Syu' \
